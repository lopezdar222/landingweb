<%if (message === 'ok') {%>
    <h2 class="text-lg font-bold md:text-xl col-span-3 md:col-span-2 flex justify-center items-center text-center"><%= title %> <%= datos.cliente_usuario %></h2>
    <!--span class="ml-2"><%= title %> <%= datos.cliente_usuario %></span-->
    <div class="w-full">
        <button onclick="cargarContenido('/principal?id_cliente=<%= datos.id_cliente %>&id_token=<%= id_token %>');" class="rounded-lg text-xs md:text-sm font-bold flex justify-center items-center disabled:opacity-40 transition py-4 relative	bg-custom-violet hover:text-gray-300 border border-custom-violet hover:border-custom-yellow w-full mb-3">
            <span class="ml-2"><<-- Volver</span>
        </button> 

        <div id="chat-window">
            <div id="chat-messages">
                <% datos2.forEach(linea => { %>
                    <%if (!linea.misma_fecha) {%>
                        <div class="date-divider"><%= linea.fecha_mensaje %></div>
                    <% } %>
                    <%if (!linea.enviado_cliente) {%>
                        <div class="message other">
                            <div class="message-content"><%= linea.mensaje %></div>
                            <div class="message-time"><%= linea.horario_mensaje %></div>
                        </div>
                    <% } else {%>
                        <div class="message self">
                            <div class="message-content"><%= linea.mensaje %></div>
                            <div class="message-time"><%= linea.horario_mensaje %></div>
                        </div>
                    <% } %>
                <% }); %>
            </div>
            <div id="input-area">
                <textarea id="message-input" placeholder="Tu mensaje aquí..." rows="2" cols="40" maxlength="200"></textarea>
                <!--input type="text" id="message-input" placeholder="Escribe tu mensaje aquí" class="message self" rows="4" cols="50"-->
                <button id="attach-button" onclick="document.getElementById('file-input').click();">Adjuntar</button>
                <button id="send-button" onclick="cargarContenidoChats(<%=id_cliente%>, document.getElementById('message-input').value);">Enviar</button>
                <input type="file" id="file-input" style="display: none;">
            </div>
        </div>
        <%if (datos.contacto_whatsapp != '') {%>
        <button class="rounded-lg text-xs md:text-sm font-bold flex justify-center items-center disabled:opacity-40 transition py-4 relative	bg-custom-violet hover:text-gray-300 border border-custom-violet hover:border-custom-yellow w-full mb-3">
            <a href="https://wa.me/<%= datos.contacto_whatsapp %>" target="_blank">
                <span class="ml-2">Contacto Whatsapp</span>
            </a>
        </button>
        <%} %>
        <%if (datos.contacto_telegram != '') {%>
        <button class="rounded-lg text-xs md:text-sm font-bold flex justify-center items-center disabled:opacity-40 transition py-4 relative	bg-custom-violet hover:text-gray-300 border border-custom-violet hover:border-custom-yellow w-full mb-3">
            <a href="https://<%= datos.contacto_telegram %>" target="_blank">
                <span class="ml-2">Contacto Telegram</span>
            </a>
        </button>
        <%} %>
        <button onclick="cerrar_Sesion(<%= datos.id_cliente %>, '<%= id_token %>');" class="rounded-lg text-xs md:text-sm font-bold flex justify-center items-center disabled:opacity-40 transition py-4 relative bg-custom-violet hover:text-gray-300 border border-custom-violet hover:border-custom-yellow w-full mb-3">
            <span class="ml-2">Cerrar Sesión</span>
        </button>
    </div>
    <%} else { %>
        <span class="ml-2"><%= message %> </span>
        <div class="w-full">
            <button onclick="cerrar_Sesion_Token_Invalido()" class="rounded-lg text-xs md:text-sm font-bold flex justify-center items-center disabled:opacity-40 transition py-4 relative bg-custom-violet hover:text-gray-300 border border-custom-violet hover:border-custom-yellow w-full mb-3">
                <span class="ml-2"><<-- Volver al Inicio</span>
            </button> 
        </div>    
    <%}  %>